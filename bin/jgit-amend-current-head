#!/bin/bash
# load common functions and variables
SCRIPT_DIR="$(dirname "$(readlink -f "${0}")")"
. "${SCRIPT_DIR}/../inc/common.sh"

common_setup_env

cd "${REPO_DIR}" || {
    error "Unable to change directories"
    exit 255
}

git diff
git log HEAD^..HEAD

echo "Press Enter to amend and jgit-push"
read -r

git commit --amend -a -C HEAD && jgit-push ${*}
